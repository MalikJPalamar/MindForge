  "screenshots": [
    {
      "src": "screenshots/chambers-screen.png",
      "sizes": "1280x720",
      "type": "image/png",
      "platform": "wide",
      "label": "Choose from 12 unique logic chambers"
    },
    {
      "src": "screenshots/puzzle-screen.png",
      "sizes": "720x1280",
      "type": "image/png",
      "platform": "narrow",
      "label": "Solve interactive logic puzzles"
    },
    {
      "src": "screenshots/progress-screen.png",
      "sizes": "720x1280",
      "type": "image/png",
      "platform": "narrow",
      "label": "Track your cognitive progress"
    }
  ],

  "shortcuts": [
    {
      "name": "Daily Challenge",
      "short_name": "Daily",
      "description": "Take today's logic challenge",
      "url": "/?action=daily-challenge",
      "icons": [
        {
          "src": "icons/daily-challenge.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Continue Journey",
      "short_name": "Continue",
      "description": "Resume your last puzzle",
      "url": "/?action=continue",
      "icons": [
        {
          "src": "icons/continue.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Progress",
      "short_name": "Progress",
      "description": "View your learning progress",
      "url": "/?screen=progress",
      "icons": [
        {
          "src": "icons/progress.png",
          "sizes": "96x96"
        }
      ]
    }
  ],

  "related_applications": [],
  "prefer_related_applications": false,

  "share_target": {
    "action": "/share-target/",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },

  "file_handlers": [
    {
      "action": "/open-puzzle/",
      "accept": {
        "application/json": [".mindforge"]
      }
    }
  ],

  "protocol_handlers": [
    {
      "protocol": "mindforge",
      "url": "/?puzzle=%s"
    }
  ],

  "edge_side_panel": {
    "preferred_width": 400
  },

  "display_override": ["window-controls-overlay", "standalone", "minimal-ui", "browser"],

  "launch_handler": {
    "client_mode": "focus-existing"
  }
}