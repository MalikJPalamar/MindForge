{
  "name": "MindForge: The 12 Chambers of Logic",
  "short_name": "MindForge",
  "description": "Progressive cognitive training through interactive logic puzzles",
  "lang": "en",
  "start_url": "/",
  "display": "standalone",
  "theme_color": "#3498db",
  "background_color": "#ffffff",
  "orientation": "portrait-primary",
  "scope": "/",
  "categories": ["education", "games", "productivity"],
  "keywords": ["logic", "puzzles", "cognitive training", "education", "brain games"],

